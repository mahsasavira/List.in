<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/text_gallery"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/judul"
        android:text="Judul"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="143dp"
        tools:layout_editor_absoluteY="539dp"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="30dp"
        android:textSize="15sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/judul_list"
        android:layout_width="330dp"
        android:layout_height="51dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="60dp"
        android:layout_marginRight="20dp"
        android:hint="Masukkan Judul Disini"
        android:inputType="textEmailAddress"
        android:textStyle="italic"
        android:textSize="15sp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="34dp"
        tools:layout_editor_absoluteY="206dp" />

    <ImageButton
        android:id="@+id/datepicker"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="300dp"
        android:layout_marginTop="145dp"
        android:background="@drawable/calendar" />

    <ImageButton
        android:id="@+id/jam"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="300dp"
        android:layout_marginTop="185dp"
        android:background="@drawable/time" />


    <ImageButton
        android:id="@+id/kategori"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="300dp"
        android:layout_marginTop="325dp"
        android:background="@drawable/kategori" />


    <TextView
        android:id="@+id/waktu"
        android:text="Waktu"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="143dp"
        tools:layout_editor_absoluteY="539dp"
        android:layout_marginTop="120dp"
        android:layout_marginLeft="30dp"
        android:textSize="15sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/tanggal_list"
        android:layout_width="270dp"
        android:layout_height="51dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="130dp"
        android:layout_marginRight="20dp"
        android:hint="Tanggal"
        android:inputType="textEmailAddress"
        android:textStyle="italic"
        android:textSize="15sp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="34dp"
        tools:layout_editor_absoluteY="206dp" />

    <EditText
        android:id="@+id/jam_list"
        android:layout_width="270dp"
        android:layout_height="51dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="170dp"
        android:layout_marginRight="20dp"
        android:hint="Jam"
        android:inputType="textEmailAddress"
        android:textStyle="italic"
        android:textSize="15sp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="34dp"
        tools:layout_editor_absoluteY="206dp" />

    <TextView
        android:id="@+id/ulangi"
        android:text="Ulangi"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="143dp"
        tools:layout_editor_absoluteY="539dp"
        android:layout_marginTop="230dp"
        android:layout_marginLeft="30dp"
        android:textSize="15sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Spinner
        android:id="@+id/ulangi_list"
        android:layout_width="280dp"
        android:layout_height="51dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="240dp"
        android:layout_marginRight="20dp"
        android:textSize="15sp"
        android:textStyle="italic"
        tools:layout_editor_absoluteX="34dp"
        tools:layout_editor_absoluteY="206dp" />

    <TextView
        android:id="@+id/tambahlist"
        android:text="Kategori List"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="143dp"
        tools:layout_editor_absoluteY="539dp"
        android:layout_marginTop="300dp"
        android:layout_marginLeft="30dp"
        android:textSize="15sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Spinner
        android:id="@+id/tbh_list"
        android:layout_width="280dp"
        android:layout_height="51dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="320dp"
        android:layout_marginRight="20dp"
        android:textStyle="italic"
        android:textSize="15sp"
        tools:layout_editor_absoluteX="34dp"
        tools:layout_editor_absoluteY="206dp" />

    <Button
        android:id="@+id/simpan_list"
        android:layout_width="150dp"
        android:layout_height="45dp"
        android:layout_marginLeft="110dp"
        android:layout_marginTop="400dp"
        android:background="#E67E22"
        android:text="SIMPAN"
        android:textColor="#000000" />

</RelativeLayout>